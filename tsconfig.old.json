{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "outDir": "build/dist",
      "outFile": "build/dist/index.js",
      "module": "esnext",
      "target": "es5",
      "lib": ["es6", "esnext"],
      "sourceMap": true,
      "moduleResolution": "node",
      "rootDir": "src",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true
    },
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "build",
      "node_modules",
      "**/*.test.ts"
    ]
  }
  
